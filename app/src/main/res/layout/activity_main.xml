<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Base.Theme.DemoJDK19"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/SecondText"
        style="@style/DemoJDK19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toto"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/my_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/my_text"
        style="@style/DemoJDK19Variant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        app:layout_constraintBottom_toTopOf="@id/thirdText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SecondText" />

    <TextView
        android:id="@+id/thirdText"
        style="@style/DemoJDK19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toto"
        app:layout_constraintBottom_toTopOf="@+id/fourthText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_text" />

    <TextView
        android:id="@+id/fourthText"
        style="@style/DemoJDK19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/thirdText" />


</androidx.constraintlayout.widget.ConstraintLayout>